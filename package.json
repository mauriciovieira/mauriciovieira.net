{
  "name": "mauriciovieira-dot-net",
  "version": "0.1.0",
  "description": "Personal website using pug and webpack",
  "engines" : { "node" : ">=6 <7" },
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "clean": "rm -rf dist/",
    "deploy": "gh-pages -d dist",
    "lint": "eslint .",
    "lintfix": "eslint --fix .",
    "pretest": "npm run lint",
    "test": "mocha --compilers js:babel-register --require babel-polyfill --recursive ./tests"
  },
  "author": "Mauricio Vieira",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:mauriciovieira/mauriciovieira.net.git"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "babel-root-import": "^4.1.3",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.0",
    "css-loader": "^0.25.0",
    "eslint": "^7.1.0",
    "eslint-plugin-chai-friendly": "^0.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.11.0",
    "html-webpack-plugin": "^2.22.0",
    "jsdom": "9.12.0",
    "jsdom-global": "2.1.1",
    "mithril-query": "^1.0.0",
    "mocha": "^3.1.2",
    "node-sass": "^4.14.1",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  },
  "babel": {
    "plugins": [
      [
        "babel-root-import",
        {
          "rootPathSuffix": "scripts"
        }
      ]
    ],
    "presets": [
      "es2015",
      "stage-0"
    ]
  }
}
